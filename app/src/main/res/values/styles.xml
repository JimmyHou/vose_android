<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- Change Overflow Menu Text Size here at textSize! -->
    <!-- <style name="AppTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MainActionBarStyle</item>
        <item name="android:popupMenuStyle">@style/MainActionBarPopupMenuStyle</item>
        <item name="android:titleTextStyle">@style/MainActionBarTextColor</item>
        <item name="android:actionBarTabStyle">@style/MainActionBarTabStyle</item>
        <item name="android:tabWidgetStyle">@style/TabHostStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="searchViewSearchIcon">@drawable/ic_search</item>
        <!--<item name="android:typeface">sans</item>-->
       <item name="android:windowBackground">@drawable/logo_background</item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

<!--<item name="android:icon">@android:color/transparent</item> -->
    <style name="MainActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="android:actionBarStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item> <!--To hide logo icon-->
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="MainActionBarPopupMenuStyle" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@android:color/black</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="android:style/Theme.Dialog">

        <item name="android:textColor"> @android:color/white</item>
        <item name="android:bottomBright">@android:color/background_dark</item>
        <item name="android:bottomDark">@android:color/black</item>
        <item name="android:bottomMedium">@android:color/black</item>
        <item name="android:centerBright">@android:color/black</item>
        <item name="android:centerDark">@android:color/black</item>
        <item name="android:centerMedium">@android:color/black</item>
        <item name="android:fullBright">@android:color/black</item>
        <item name="android:fullDark">@android:color/black</item>
        <item name="android:topBright">@android:color/black</item>
        <item name="android:topDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
    </style>




    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:minWidth">220dp</item>
    </style>



    <style name="ActionBar.MenuTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="MainActionBarTextColor" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabHostStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="spinner_style" parent="@android:style/Widget.Spinner">

        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
</resources>