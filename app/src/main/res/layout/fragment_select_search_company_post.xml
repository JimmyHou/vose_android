<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_select_company_to_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:clickable="true">

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:divider="@color/list_view_divider_gray"
        android:dividerHeight="0.5dp"
        />


    <LinearLayout
        android:id="@+id/no_search_result_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >

       <TextView
           android:id="@+id/no_search_result"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/no_search_result"
           android:textSize="20dp"
           android:textColor="@color/white"
           android:layout_margin="20dp"
           android:layout_centerHorizontal="true"
          />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/user_create_company_button"
           android:layout_centerHorizontal="true"
           android:textColor="@color/white"
           android:text="@string/user_create_company_button"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:background="@drawable/button"
          />

    </LinearLayout>


    <View
        android:id="@+id/separate_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_view_divider_gray"
        android:layout_below="@+id/android:list"/>

</RelativeLayout>